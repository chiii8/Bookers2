<div class="contanir p-3">
  <div class="row">
    <div class="mx-auto col-md-7">
      <h2>User info</h2>
      <%= render 'users/error_user', user: @user %>
      <%= form_with model: @user, url: user_path, method: :patch do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field mt-3">
        <%= f.label :image %><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="field mt-3">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction %>
      </div>
      <div class="actions mt-3 mb-5">
        <input class="btn btn-secondary" type="submit" value="Update User">
      </div>
      <% end %>
    </div>
  </div>
</div>