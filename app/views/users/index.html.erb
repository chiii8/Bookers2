<div class="container p-3">
  <div class="row">
    <div class="col-8">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(current_user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
