<div class="pt-4">
  <h2>New book</h2>
  <%= form_with model: book do |f| %>
    <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <label>Opinion</label>
      <%= f.text_area :body, class:"form-control" %>
    </div>
    <div class="mt-3">
      <input class="btn btn-success" type="submit" value="Create Book">
    </div>
  <% end %>
</div>