<%= form_with model: book do |f| %>
  <div class="field mt-2">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field mt-2">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="mt-3">
    <input class="btn btn-success" type="submit" value="Create Book">
  </div>
<% end %>