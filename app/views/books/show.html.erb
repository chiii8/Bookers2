<%= render 'books/error', book: @book %>

<div class="container p-3">
  <div class="row">
    <div class="col-md-3"> 
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    
    <div class="col-md-8">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td><%= image_tag "no_image.jpg" %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>