<div class="container p-3">
  <div class="row">
    <div class="col-4"> 
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="field mt-2">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field mt-2">
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </div>
        <div class="mt-3">
          <input class="btn btn-success" type="submit" value="Create Book">
        </div>
      <% end %>
    </div>
    
    <div class="col-8">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Body</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td></td>
            <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>