<div class="contanir p-3">
  <div class="row">
    <div class="col-6 offset-3">
      <h2>User info</h2>
    <%= form_with model: @user, url: user_path, method: :patch do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field mt-2">
        
      </div>
      <div class="field mt-2">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction %>
      </div>
      <div class="actions mt-2">
        <input class="btn btn-secondary" type="submit" value="Update User">
      </div>
    <% end %>
    </div>
  </div>
</div>