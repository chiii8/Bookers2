<div class="contanir p-3">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <h2>User info</h2>
      <%= render 'users/error_user', user: @user %>
      <%= form_with model: @user, url: user_path, method: :patch do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
        <label>Image</label>
        <%= f.file_field :profile_image, accept: "image/*", class:"w-100" %>
      </div>
      <div class="form-group">
        <label>Introduction</label>
        <%= f.text_area :introduction, class:"form-control" %>
      </div>
      <div class="actions mt-3">
        <input class="btn btn-secondary" type="submit" value="Update User">
      </div>
      <% end %>
    </div>
  </div>
</div>